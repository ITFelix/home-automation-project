<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AcquirementActivity" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/linearlayout_temp"
        android:onClick="Values"
        android:orientation="horizontal"
        android:padding="20dp" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="45dp"
            android:layout_height="50dp"
            android:src="@drawable/thermometer" />

        <TextView
            android:id="@+id/txTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Temperature "
            android:textColor="@android:color/white"
            android:textSize="10pt" />

        <ToggleButton
            android:id="@+id/btnTemp"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_weight="2.05"
            android:text="Temp"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout1"
        android:background="@drawable/linearlayout_temp"
        android:orientation="horizontal"
        android:padding="20dp" >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/motion" />

        <TextView
            android:id="@+id/txMove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   Motion          "
            android:textColor="@android:color/white"
            android:textSize="10pt" />

        <ToggleButton
            android:id="@+id/btnMove"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="2.05"
            android:text="Motion"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout2"
        android:background="@drawable/linearlayout_temp"
        android:orientation="horizontal"
        android:padding="20dp" >

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/propane" />

        <TextView
            android:id="@+id/txGas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Gas               "
            android:textColor="@android:color/white"
            android:textSize="10pt" />

        <ToggleButton
            android:id="@+id/btnGas"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="2.05"
            android:text="Gas"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout3"
        android:background="@drawable/linearlayout_temp"
        android:orientation="horizontal"
        android:padding="20dp" >

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/lamp" />

        <TextView
            android:id="@+id/txLight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Luminosity     "
            android:textColor="@android:color/white"
            android:textSize="10pt" />

        <ToggleButton
            android:id="@+id/btnLight"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="2.05"
            android:text="Light"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout4"
        android:background="@drawable/linearlayout_temp"
        android:orientation="horizontal"
        android:padding="120dp" >
    </LinearLayout>

</RelativeLayout>