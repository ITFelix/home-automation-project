<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/linearlayout_temp"
    tools:context="com.example.homeautomation.MainActivity"
    tools:ignore="MergeRootFrame" >

    <Button
        android:id="@+id/ConnectApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="71dp"
        android:onClick="btConnectServer"
        android:text="Connect" />

    <TextView
        android:id="@+id/NameApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/LogoApp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="42dp"
        android:text="Smart House Control"
        android:textSize="14pt" />

    <ImageView
        android:id="@+id/LogoApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/logo" />

</RelativeLayout>
